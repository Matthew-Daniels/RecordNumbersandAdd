<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableLayout
        android:id="@+id/inputTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/recordOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recordOne"
                android:textSize="25dp"
                android:padding="20dp"
                />

            <EditText
                android:id="@+id/distandOne"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="number"
                android:inputType="number"
                android:textSize="25dp"
                android:padding="20dp"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/recordTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recordTwo"
                android:textSize="25dp"
                android:padding="20dp"
                />

            <EditText
                android:id="@+id/distandTwo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="number"
                android:inputType="number"
                android:textSize="25dp"
                android:padding="20dp"/>


        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/message_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark"
        android:text="Hello Matt"
        android:textSize="50dp" />

    <Button
        android:id="@+id/UpdateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:text="@string/updateButton" />

</RelativeLayout>
